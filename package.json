{
  "name": "keplear",
  "private": true,
  "version": "1.0.3",
  "engines": {
    "node": ">=20.0.0"
  },
  "description": "Interactive keyboard for melody generation and practice",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "rm -rf node_modules/.vite node_modules/.cache dist .vite && vite build",
    "build:check": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run src/__tests__/integration",
    "test:hooks": "vitest run src/hooks/__tests__",
    "test:components": "vitest run src/components/__tests__",
    "analyze": "vite build --mode analyze",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "cap:build": "npm run build && node scripts/strip-csp-for-capacitor.js && npx cap sync",
    "cap:android": "npm run cap:build && npx cap open android",
    "cap:ios": "npm run cap:build"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.2",
    "@capacitor/app": "^8.0.0",
    "@capacitor/cli": "^8.0.2",
    "@capacitor/core": "^8.0.2",
    "@capacitor/haptics": "^8.0.0",
    "@capacitor/ios": "^8.0.2",
    "@capacitor/keyboard": "^8.0.0",
    "@capacitor/network": "^8.0.0",
    "@capacitor/preferences": "^8.0.0",
    "@capacitor/push-notifications": "^8.0.0",
    "@capacitor/splash-screen": "^8.0.0",
    "@capacitor/status-bar": "^8.0.0",
    "@sentry/react": "^10.38.0",
    "@supabase/supabase-js": "^2.56.0",
    "@tensorflow/tfjs": "^4.22.0",
    "flag-icons": "^7.5.0",
    "lucide-react": "^0.541.0",
    "pitchfinder": "^2.3.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-helmet-async": "^2.0.5",
    "react-icons": "^5.5.0",
    "react-router": "^7.13.0",
    "tone": "^15.1.22",
    "youtube-info-streams": "^1.1.3"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.58.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.0",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rollup-plugin-analyzer": "^4.0.0",
    "sharp": "^0.34.5",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "terser": "^5.44.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^2.0.0",
    "workbox-window": "^7.4.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{ts,tsx,json,md,css}": [
      "prettier --write"
    ]
  }
}
